{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Windows Testbed",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-windows/bin/Debug/testbed.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build Windows Debug"
        },
        {
            "name": "Release Windows Testbed",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-windows/bin/Release/testbed.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build Windows Release"
        },
        {
            "name": "Launch WebGPU Testbed",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:6931/testbed.html",
            "webRoot": "${workspaceFolder}/build-emsdk/bin",
            "preLaunchTask": "Run Emscripten Server",
            "sourceMaps": true,
            "timeout": 30000,
            "runtimeArgs": [
                "--disable-web-security",
                "--allow-running-insecure-content"
            ]
        },
        {
            "name": "Run Emscripten Server Only",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/dummy.js",
            "preLaunchTask": "Run Emscripten Server"
        }
        ,
        {
            "name": "Debug macOS Testbed",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/testbed",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Build macOS Debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.max-children-count 256",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
