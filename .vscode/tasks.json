{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Windows Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build-windows",
                "--config",
                "Debug"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Build Windows Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build-windows",
                "--config",
                "Release"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "Build macOS Debug",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "mkdir -p build && cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build -- -j$(sysctl -n hw.ncpu)"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run Emscripten Server",
            "type": "shell",
            "command": "D:\\SDKs\\emsdk\\upstream\\emscripten\\emrun.bat",
            "args": [
                "--port", "6931",
                "${workspaceFolder}\\build-emsdk\\bin\\testbed.html"
            ],
            "group": "build",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Web server root directory:",
                    "endsPattern": "^.*server listening.*$"
                }
            }
        },
        {
            "label": "Build Emscripten",
            "type": "shell",
            "command": "build-emsdk.bat",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
